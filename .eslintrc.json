{
  "root": true,
  "extends": [
      "airbnb"
  ],
  "parser": "babel-eslint",
  "plugins": [
      "prettier",
      "import"
  ],
  "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
  },
  "env": {
      "browser": true,
      "node": true,
      "mocha": true
  },
  "rules": {
      "no-console": "error",
      "comma-dangle": "off",
      "linebreak-style": [0, "error", "windows"]
  }
}
